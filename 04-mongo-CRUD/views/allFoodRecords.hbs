{{#extends "base"}}
{{#block "content"}}
<h1>All Food Records</h1>

<h2>Search</h2>
<form method="GET">
    <div>
        <label>Food Name:</label>
        <input type="text" name="foodName" class="form-control" value="{{searchCriteria.foodName}}">
    </div>
    <div>
        <label>Min Calories:</label>
         <input type="numbder" name="minCalories" class="form-control" value="{{searchCriteria.calories}}">
    </div>
    <input type="submit" class="btn btn-primary mt-3">
</form>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Calories</th>
            <th>Tags</th>
        </tr>
    </thead>
    <tbody>
        {{#each foodRecords }}
        <tr>
            <td>{{this.foodName}}</td>
            <td>{{this.calories}}</td>
            <td>{{this.tags}}</td>
            <td>
                <a href="./add-note/{{this._id}}" class="btn btn-primary">Add Note</a>
                <a href="./update-food/{{this._id}}" class="btn btn-primary">Update</a>
                <a href="./delete-food/{{this._id}}" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}
{{/extends}}