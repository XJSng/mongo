{{#extends "base"}}
{{#block "content"}}
    <h1>Add a New Food</h1>
    <form method="POST">
        <div>
            <label>Food Name</label>
            <input type="text" name="foodName" value="{{foodRecord.foodName}}" />
        </div>
        <div>
            <label>Calories</label>
            <input type="text" name="calories" value="{{foodRecord.calories}}" />
        </div>
        <div>
            <label>Tags</label>
            <input type="checkbox" name="tags" value="homecooked" {{#inArray foodRecord.tags "homecooked"}} checked {{/inArray}} />
            <label>Home Cooked</label>

            <input type="checkbox" name="tags" value="organic" {{#inArray foodRecord.tags "organic"}} checked {{/inArray}} />
            <label>Organic</label>

            <input type="checkbox" name="tags" value="vegan" {{#inArray foodRecord.tags "vegan"}} checked {{/inArray}}/>
            <label>Vegan</label>


            <input type="checkbox" name="tags" value="Unhealthy" {{#inArray foodRecord.tags "Unhealthy"}} checked {{/inArray}} />
            <label>Unhealthy</label>
            <input type="submit" value="Add Food" />
        </div>
    </form>

{{/block}}

{{/extends}}